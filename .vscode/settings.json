{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.experimental.useFlatConfig": true,
  "prettier.requireConfig": true,
  "prettier.configPath": "prettier.config.js",
  "stylelint.configFile": "stylelint.config.cjs",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.format.enable": true,
  "stylelint.enable": true,
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.module.css": "*.module.css.d.ts, *.module.css.d.ts.map",
    "eslint.config.js": ".eslintignore",
    "prettier.config.js": ".prettierignore",
    "stylelint.config.cjs": ".stylelintignore",
    "tsconfig.json": "tsconfig.tsbuildinfo"
  }
}
